<div id="new_event_div">
  <h3>describe your event</h3>
<%= form_for @event do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content, :rows => 10 %>
  </div>
  <div class="field">
    <label>Date:</label>
    <%= f.text_field :calendar_date %>
  </div>
  <div class="actions">
    <%= f.submit "#{action} event" %>
  </div>
<% end %>
</div>
